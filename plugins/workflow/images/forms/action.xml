<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="options">
		<fieldset name="images"
				  label="PLG_WORKFLOW_IMAGES_IMAGE_SETTING_LABEL"
		>

			<fieldset name="images_image_settings" label="PLG_WORKFLOW_IMAGES_IMAGE_SETTING_LABEL">
				<field
					name="images_intro_image_settings"
					type="list"
					label="PLG_WORKFLOW_IMAGES_INTRO_IMAGE_SETTING_LABEL"
					default="0"
					hide_all="true"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="images_full_article_image_settings"
					type="list"
					label="PLG_WORKFLOW_IMAGES_FULL_ARTICLE_IMAGE_SETTING_LABEL"
					default="0"
					hide_all="true"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- <field
					name="fileExtensions"
					type="text"
					label="Supported Extensions"
					description="Image extensions, which are allowed on this transition (comma seperated)"
					default=""
					hide_all="true"
					step="1"
				>
				</field> -->
			</fieldset>


			<fieldset name="images_image_size" label="PLG_WORKFLOW_IMAGES_RESIZE_SETTING_LABEL">

				<field
					name="resizeFullArticleImage"
					type="radio"
					label="Resize Full Article Image"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="boolean"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="resizeIntroImage"
					type="radio"
					label="Resize Full Article Image"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="boolean"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="introImageHeight"
					type="number"
					label="PLG_WORKFLOW_IMAGES_INTRO_IMAGE_HEIGHT_LABEL"
					default=""
					hide_all="true"
					step="1"
				>
				</field>

				<field
					name="fullArticleImageHeight"
					type="number"
					label="PLG_WORKFLOW_IMAGES_FULL_ARTICLE_IMAGE_HEIGHT_LABEL"
					default=""
					hide_all="true"
					step="1"
				>
				</field>

				<field
					name="introImageWidth"
					type="number"
					label="PLG_WORKFLOW_IMAGES_INTRO_IMAGE_WIDTH_LABEL"
					default=""
					hide_all="true"
					step="1"
				>
				</field>

				<field
					name="fullArticleImageWidth"
					type="number"
					label="PLG_WORKFLOW_IMAGES_FULL_ARTICLE_IMAGE_WIDTH_LABEL"
					default=""
					hide_all="true"
					step="1"
				>
				</field>

			</fieldset>

		</fieldset>
	</fields>
</form>
